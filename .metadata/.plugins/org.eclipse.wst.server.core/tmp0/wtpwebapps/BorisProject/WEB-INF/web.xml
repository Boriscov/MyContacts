<?xml version="1.0" encoding="UTF-8"?>
<web-app
	xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    version="3.0">
    
    
    <session-config> 
		<session-timeout>30</session-timeout>
	</session-config>

    
    <listener>
    	<listener-class>config.InitialisationDaoFactory</listener-class>
	</listener>
	
	<servlet>
		<servlet-name>Home</servlet-name>
		<servlet-class>web.Home</servlet-class>	
	</servlet>
    
	<servlet>
		<servlet-name>Registration</servlet-name>
		<servlet-class>web.Registration</servlet-class>	
	</servlet>
	
	<servlet>
		<servlet-name>EditUser</servlet-name>
		<servlet-class>web.EditUser</servlet-class>	
	</servlet>
	
	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>web.Login</servlet-class>
	</servlet>
	
	<servlet>
	<servlet-name>Logout</servlet-name>
	<servlet-class>web.Logout</servlet-class>
	</servlet>
	
	
	<servlet>
		<servlet-name>UserList</servlet-name>
		<servlet-class>web.UserList</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>UserDetails</servlet-name>
		<servlet-class>web.UserDetails</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>DeleteUser</servlet-name>
		<servlet-class>web.DeleteUser</servlet-class>
	</servlet>
	
	

	<servlet-mapping>
		<servlet-name>Home</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>Registration</servlet-name>
		<url-pattern>/registration</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>EditUser</servlet-name>
		<url-pattern>/editUser</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
	<servlet-name>Logout</servlet-name>
	<url-pattern>/logout</url-pattern>
</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>UserList</servlet-name>
		<url-pattern>/userList</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>UserDetails</servlet-name>
		<url-pattern>/userDetails</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>DeleteUser</servlet-name>
		<url-pattern>/deleteUser</url-pattern>
	</servlet-mapping>

</web-app>